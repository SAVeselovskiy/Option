<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.sergejveselovskij.options.MainActivity"
        tools:showIn="@layout/activity_main">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/a_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Введите a"
            android:paddingBottom="16dp"
            android:textColorHint="#6000">

            <EditText
                android:id="@+id/a_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="numberSigned|numberDecimal"
                android:maxLines="1"
                android:text="-0.3"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/b_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите b"
            android:paddingBottom="16dp"
            android:textColorHint="#6000">

            <EditText
                android:id="@+id/b_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:text="0.4"
                android:inputType="numberSigned|numberDecimal"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/r_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите r"
            android:paddingBottom="16dp"
            android:textColorHint="#6000">

            <EditText
                android:id="@+id/r_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="numberSigned|numberDecimal"
                android:maxLines="1"
                android:text="0.1"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/K_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите K"
            android:paddingBottom="16dp"
            android:textColorHint="#6000">

            <EditText
                android:id="@+id/K_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="numberSigned|numberDecimal"
                android:maxLines="1"
                android:text="110"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/B0_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите B0"
            android:paddingBottom="16dp"
            android:textColorHint="#6000">

            <EditText
                android:id="@+id/B0_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="numberSigned|numberDecimal"
                android:maxLines="1"
                android:text="10"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/S0_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите S0"
            android:paddingBottom="16dp"
            android:textColorHint="#6000">

            <EditText
                android:id="@+id/S0_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="numberSigned|numberDecimal"
                android:maxLines="1"
                android:text="100"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/N_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите N"
            android:paddingBottom="16dp"
            android:textColorHint="#6000">

            <EditText
                android:id="@+id/N_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:text="2"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#1F000000" />

        <LinearLayout
            android:id="@+id/steps_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <ViewAnimator
            android:id="@+id/switcher_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:id="@+id/start_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Начать" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/increase_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#5b5"
                    android:elevation="20dp"
                    android:text="Увеличилась" />

                <Button
                    android:id="@+id/decrease_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#e11"
                    android:elevation="20dp"
                    android:text="Уменьшилась" />

            </LinearLayout>
            <Button
                android:id="@+id/restart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Начать заново" />
        </ViewAnimator>
    </LinearLayout>
</ScrollView>